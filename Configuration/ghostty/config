# Ghostty configuration file.

theme = rose-pine

font-family = "Iosevka Term"
font-size = 15

background-opacity = 0.9

mouse-hide-while-typing = true

# Use the underline cursor in the shell.
cursor-style = underline
shell-integration-features = no-cursor

# Keybinds.

keybind = alt+;>r=reset

keybind = alt+;>c=copy_to_clipboard
keybind = alt+;>v=paste_from_clipboard

keybind = alt+;>t=new_tab
keybind = alt+;>m=move_tab:1

keybind = alt+;>s=new_split:auto
keybind = alt+space=goto_split:next

keybind = alt+;>/=reload_config
keybind = alt+;>f=toggle_fullscreen

# On a Coolemak keyboard:
# N E I O
# ← ↑ → ↓
keybind = alt+n=previous_tab
keybind = alt+e=scroll_page_lines:-1
keybind = alt+i=next_tab
keybind = alt+o=scroll_page_lines:1

# Unbind default keybinds.
# Except the `ALT+NUMBER` combinations.
keybind = super+ctrl+shift+plus=unbind
keybind = super+ctrl+shift+up=unbind
